<link href='//fonts.googleapis.com/css?family=Alegreya+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
<link href="//fonts.googleapis.com/css?family=PT+Sans:400,700&amp;subset=latin" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=PT+Mono" rel="stylesheet">
<script src="~/Scripts/jquery-1.10.2.js"></script>

<link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>

<style>
    .root {
        width: 600px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 80px;
        font-family: 'Josefin Sans', sans-serif, Arial;
        font-size: 20px;
        position: relative;
    }

    .root .logo {
        max-width: 100px;
        border-radius: 5px;
        vertical-align: middle;
        margin-top: -10px;
    }

    .root .preview {
        width: 100%;
        border-radius: 4px;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .root .info {
        margin: 40px 10px;
        text-align: justify;
    }

    .root .info span.title {
        font-weight: bold;
    }

    .root .header {
        font-size: 34px;
        color: #55b919;
        font-weight: bold;
    }

    .root li span {
        color: #55b919;
    }

    .copyright {
        margin: 20px;
        color: gray;
        text-align: center;
        font-size: 18px;
        margin-bottom: 200px;
    }

    .root .socials {
        position: absolute;
        top: 25px;
        right: 0px;
    }
    .root .downloads {
        text-align:center;
        opacity: .4;
    }
</style>
<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=528732163816152";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
@{Html.RenderPartial("_GithubLogo");}
<div class="root">
    <div class="header">
        <img src="~/Images/icon.png" class="logo" />
        <span>The Game - Pitching</span>
    </div>
    <div class="socials">
        <div class="fb-like" data-href="http://pitching.jok.io/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
    </div>
    <div class="info">
        <span class="title">Idea:</span><br />
        There is a speaker on game jam and jury throws tomatoes.
        Speaker's goal is to miss them all and get more Ninja points.
        Idea was born at first "Game Jam" event, in Tbilisi, Georgia.
    </div>
    <div class="info">
        <span class="title">Game Modes:</span><br />
        <ul>
            <li><span>Play as Speaker</span> - Jury throws tomatoes, you will need to miss them all</li>
            <li><span>Play as Jury</span> - You must throw tomatoes to speaker</li>
        </ul>
    </div>
    <div class="downloads">
        <img src="~/Images/badge_appstore-lrg.png" />
    </div>
    <img src="~/Images/preview.png" class="preview" />
    <div class="copyright">
        All rights reserved © Jok Entertainers
    </div>
</div>